<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MyWorkoutsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Corner.Top"

        android:elevation="8dp"
        android:layout_gravity="bottom|center_horizontal"
        android:contentDescription="@string/new_workout_btn_description"
        android:text="@string/new_workout"
        app:icon="@drawable/ic_plus" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>